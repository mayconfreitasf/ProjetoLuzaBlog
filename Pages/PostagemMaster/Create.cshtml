@page
@model ProjetoLuzaBlog.Pages.PostagemMaster.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Publicar nova postagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Postagem.UserId" value="@Model.UserId" />
                <label asp-for="Postagem.DesConteudo" class="control-label">O que você quer publicar?</label>
                <input asp-for="Postagem.DesConteudo" class="form-control" />
                <span asp-validation-for="Postagem.DesConteudo" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Publicar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a minha lista de postagens</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
}
