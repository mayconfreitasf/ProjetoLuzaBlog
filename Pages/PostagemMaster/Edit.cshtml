@page
@model ProjetoLuzaBlog.Pages.PostagemMaster.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Editando Postagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Postagem.CodPostagem" />
            <input type="hidden" asp-for="Postagem.UserId" />
            <div class="form-group">
                <label asp-for="Postagem.DesConteudo" class="control-label"></label>
                <input asp-for="Postagem.DesConteudo" class="form-control" />
                <span asp-validation-for="Postagem.DesConteudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postagem.DatCadastro" class="control-label"></label>
                <input asp-for="Postagem.DatCadastro" class="form-control" readonly />
                <span asp-validation-for="Postagem.DatCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postagem.DatAtualizacao" class="control-label"></label>
                <input asp-for="Postagem.DatAtualizacao" class="form-control" readonly />
                <span asp-validation-for="Postagem.DatAtualizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar a minha lista de postagens</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
